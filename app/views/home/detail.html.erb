<div class = "detail_contents">
  <%= render 'header' %>
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <p>
        <strong>Title:</strong>
        <%= @content.title %>
      </p>
      
      <p>
        <strong>Body:</strong>
        <%= @content.body.html_safe %>
      </p>
      
      
      <p>
        <strong>Kind:</strong>
        <%= @content.kind %>
      </p>
    </div>
    
    <div class="col-md-6">

    <%= image_tag(@content.image1.url, { :border => '0'}) %>
      
    </div>
    
  </div>
</div>