<p id="notice"><%= notice %></p>

<h1>Contents</h1>

<div class = "new_contents">
  <%= link_to 'New Content', new_content_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image1</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= content.body %></td>
        <td>
          <% if content.image1? %>
            <%= image_tag(content.image1.url) %>
          <% end %>
        </td>
        <td><%= content.kind %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>